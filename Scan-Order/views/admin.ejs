<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Admin</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

        body {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            background-color: #f4f4f4;
        }

        .img {
            display: flex;
            justify-content: center;
            margin: 20px 0;
        }

        .img img {
            max-width: 100%;
            height: auto;
            width: 450px;
        }

        .card {
            border: 1px solid #ddd;
            border-radius: 8px;
            background: #f9f9f9;
            padding: 10px;
            margin: 10px auto;
            width: 90%;
            max-width: 25rem;
        }

        .card h5 {
            margin-bottom: 15px;
            font-size: 1.2rem;
            color: #007bff;
            font-weight: 500;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
            overflow-x: auto;
        }

        .table th,
        .table td {
            border: 1px solid #ddd;
            text-align: center;
            padding: 8px;
            font-size: 0.9rem;
            font-weight: 400;
        }

        .table th {
            background-color: #f1f1f1;
            font-weight: 600;
        }

        .text-warning {
            color: #ffc107;
        }

        .text-success {
            color: #28a745;
        }

        button {
            margin-top: 10px;
            padding: 8px 16px;
            background-color: #28a745;
            border: none;
            color: white;
            cursor: pointer;
            border-radius: 4px;
            font-weight: 500;
        }

        button:hover {
            background-color: #218838;
        }

        @media (max-width: 768px) {
            .img img {
                width: 90%;
            }

            .card h5 {
                font-size: 1rem;
            }

            .table th,
            .table td {
                font-size: 0.8rem;
            }
        }
    </style>
</head>
<body>
    <div class="img">
        <img src="/menuImage/logo.png" alt="scan and order">
    </div>
    <% user.forEach(user => { %>
        <div class="card">
            <div class="card-body">
                <h5>Customer: <%= user.fullname %></h5>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Item Name</th>
                            <th>Qty</th>
                            <th>Price</th>
                            <th>Payment Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let userOrders = chefOrders.filter(order => String(order.createdBy) === String(user._id)); %>
                        <% userOrders.forEach(item => { %>
                            <tr>
                                <td><%= item.name %></td>
                                <td><%= item.quantity %></td>
                                <td>₹<%= item.price %></td>
                                <td class="<%= item.paymentStatus === 'Pending' ? 'text-warning' : 'text-success' %>">
                                    <%= item.paymentStatus %>
                                </td>
                            </tr>
                        <% }); %>
                        <tr>
                            <td colspan="2" class="text-right">Total:</td>
                            <td colspan="2" class="text-success">₹ <%= userOrders.reduce((total, item) => total + (item.price * item.quantity), 0) %></td>
                        </tr>
                    </tbody>
                </table>
                <form method="POST" action="/updatePaymentStatus">
                    <input type="hidden" name="userId" value="<%= user._id %>">
                    <button type="submit">Done</button>
                </form>
            </div>
        </div>
    <% }); %>
    <script>
        setInterval(() => {
            location.reload(); 
        }, 5000);
    </script>
    <%- include('./partials/script.ejs') %>
</body>
</html>
