<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs') %>
  <title>Chef Dashboard</title>
  
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');
    body {
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh; 
      font-family: 'Poppins', sans-serif;
      background-color: #f9f9f9;
    }

    .container {
      text-align: center;
      padding: 10px;
      width: 100%; 
    }

    .logo img {
      display: block;
      margin: 0 auto 20px;
      max-width: 100%;
      height: auto;
    }

    
    .card-body {
      padding: 15px;
    }
    
    .card {
      border: 1px solid #ddd;
      border-radius: 8px;
      background: #f9f9f9;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      margin: 10px auto;
      width: 90%;
      max-width: 25rem;
      padding: 10px;
      
    }
        .card h5 {
            margin-bottom: 15px;
            font-size: 1.2rem;
            color: #007bff;
            font-weight: 500;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
            overflow-x: auto;
        }

        .table th,
        .table td {
            border: 1px solid #ddd;
            text-align: center;
            padding: 8px;
            font-size: 0.9rem;
            font-weight: 400;
        }

        .table th {
            background-color: #f1f1f1;
            font-weight: 600;
        }

    .card-title {
      font-size: 1.25rem;
      font-weight: bold;
      margin-bottom: 10px;
      color: #333;
    }


    button {
            margin-top: 10px;
            padding: 8px 16px;
            background-color: #28a745;
            border: none;
            color: white;
            cursor: pointer;
            border-radius: 4px;
            font-weight: 500;
        }


    button:hover {
            background-color: #218838;
        }

    @media (max-width: 768px) {
      table {
        display: block;
        overflow-x: auto; 
      }

      th, td {
        white-space: nowrap; 
      }

      .card-title {
        font-size: 1rem; 
      }
      .card h5 {
                font-size: 1rem;
            }

            .table th,
            .table td {
                font-size: 0.8rem;
            }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="logo mt-3">
      <img src="/menuImage/logo.png" alt="logo" width="400px">
    </div>
    <% users.forEach(user => { %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Customer: <%= user.fullname %></h5>
          <table class="table">
            <thead>
              <tr>
                <th>Item Name</th>
                <th>Qty</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% let userOrders = chefOrders.filter(order => String(order.createdBy) === String(user._id)); %>
              <% if (userOrders.length > 0) { %>
                <% userOrders.forEach(order => { %>
                  <tr>
                    <td><%= order.name %></td>
                    <td><%= order.quantity %></td>
                    <td>
                      <form method="POST" action="/markAsDone">
                        <input type="hidden" name="itemId" value="<%= order._id %>">
                        <button type="submit" class="done-btn btn btn-success">Done</button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="3">No orders found</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    <% }) %>
  </div>

  <script>
    setInterval(() => {
      location.reload(); 
    }, 5000);
  </script>
  <%- include('./partials/script.ejs') %>
</body>
</html>
